%h3#handled-incidents
  %span
  - if @start_date == @end_date
    Frequency of alerts handled on
    = @start_date
  - else
    Frequency of alerts handled between
    = @start_date
    and
    = @end_date
  - if @search
    matching term
    = '"'+@search+'"'

%div{:id => 'breakdownchart'}

%form{:action => '', :method => 'post', :role => 'form', :class => 'form', :id => 'breakdown'}
  %h3
    Alert list (total: #{@total})
  %table#incidents-table.table.table-hover.table-striped.table-bordered.table-condensed.tablesorter
    %thead
      %tr
        %th#count
          Count
        %th#entity
          Entity
        %th#check
          Check
    %tbody
      - @incidents.each do |incident|
        %tr
          %td= incident['count']
          %td= incident['entity']
          %td= incident['check']

%script{:src => "https://code.highcharts.com/highcharts.js"}
:javascript
  $(function () {
    var data = #{@series}
    $('#breakdownchart').highcharts({
      chart: {
        type: 'column'
      },
      credits: {
          enabled: false
      },
      title: {
          text: 'Top 50 most frequent alerts'
      },
      xAxis: {
        categories: [ 'Alerts' ]
      },
      yAxis: {
          min: 0,
          title: {
              text: 'Number of alerts'
          }
      },
      legend: {
          enabled: false
      },
      plotOptions: {
        series: {
          groupPadding: 0,
          dataLabels: {
            crop:     true,
            enabled:  false,
            overflow: 'justify',
          }
        }
      },
      series: data
    });
  });
